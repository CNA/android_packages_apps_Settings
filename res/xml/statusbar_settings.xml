<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="battery_icon_category"
        android:title="@string/status_bar_battery_icon_category">

        <ListPreference
            android:key="battery_icon_list"
            android:title="@string/status_bar_battery_icon_style"
            android:entries="@array/battery_icon_entries"
            android:entryValues="@array/battery_icon_values" />
    
        <CheckBoxPreference
            android:key="battery_not"
            android:title="@string/status_bar_battery_notification_title"
            android:summary="@string/status_bar_battery_notification_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="battery_bar_cat"
        android:title="@string/status_bar_battery_bar_category">
        
        <ListPreference
            android:key="battery_bar_list"
            android:title="@string/status_bar_battery_bar_location"
            android:entries="@array/battery_bar_entries"
            android:entryValues="@array/battery_bar_values" />
        
        <ListPreference
            android:key="battery_bar_style"
            android:title="@string/status_bar_battery_bar_style_title"
            android:entries="@array/battery_bar_style_entries"
            android:entryValues="@array/battery_bar_style_values" />
        
        <CheckBoxPreference
            android:key="battery_bar_animate"
            android:title="@string/status_bar_battery_bar_animate_title"
            android:summary="@string/status_bar_battery_bar_animate_summary" />
        
        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="battery_bar_color"
            android:title="@string/status_bar_battery_bar_color"
            android:defaultValue="#33B5E5" />
        
        <ListPreference
            android:key="battery_bar_thickness"
            android:title="@string/status_bar_battery_bar_thickness_title"
            android:entries="@array/battery_bar_thickness_entries"
            android:entryValues="@array/battery_bar_thickness_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="clock_category"
        android:title="@string/status_bar_clock_category">

        <ListPreference
            android:key="clock_style"
            android:title="@string/status_bar_clock_style_title"
            android:entries="@array/clock_style_entries"
            android:entryValues="@array/clock_style_values" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="clock_color"
            android:title="@string/status_bar_clock_color_title"
            android:defaultValue="@android:color/holo_blue_light" />

        <ListPreference
            android:key="clock_am_pm_style"
            android:title="@string/status_bar_clock_ampm_style_title"
            android:entries="@array/clock_ampm_entries"
            android:entryValues="@array/clock_ampm_values" />

        <ListPreference
            android:key="clock_weekday"
            android:title="@string/status_bar_clock_dayofweek_style_title"
            android:summary="@string/status_bar_clock_dayofweek_style_summary"
            android:entries="@array/clock_weekday_entries"
            android:entryValues="@array/clock_weekday_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="additional_options"
        android:title="@string/status_bar_additional_options_title">
        
        <CheckBoxPreference 
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_brightness_slider"
            android:summary="@string/status_bar_brightness_slider_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notification_count_title"
            android:summary="@string/status_bar_notification_count_summary"
            android:defaultValue="false" />
        
    </PreferenceCategory>

</PreferenceScreen>
